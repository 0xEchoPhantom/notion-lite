rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT RULES - More permissive for debugging
    // TODO: Tighten security before production
    
    // User-specific documents (includes unified blocks)
    match /users/{userId}/{document=**} {
      // Allow authenticated users to access their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // TEMPORARY: Allow unauthenticated writes for quick capture API (development only)
      // This is needed because API routes don't have user authentication context
      // TODO: In production, use Firebase Admin SDK with service account
      allow read, create, update: if true; // WARNING: Insecure - development only!
    }
    
    // Specific rules for unified blocks collection
    match /users/{userId}/blocks/{blockId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow querying blocks by pageId
      allow list: if request.auth != null && request.auth.uid == userId;
    }
    
    // Workspaces - users can read/write their own workspaces
    match /workspaces/{workspaceId} {
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.auth.uid != null); // Allow reading during queries
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Page references - allow authenticated users
    match /pageReferences/{referenceId} {
      allow read, write: if request.auth != null;
    }
  }
}
