#!/bin/sh

# Git pre-push hook
# Automatically runs verification before pushing to remote

echo "üîç Running pre-push verification..."

# Run the quick verification (lint + type check)
npm run verify:quick

if [ $? -ne 0 ]; then
  echo "‚ùå Pre-push verification failed!"
  echo "Please fix the issues before pushing."
  exit 1
fi

echo "‚úÖ Pre-push verification passed!"
echo "Pushing to remote..."